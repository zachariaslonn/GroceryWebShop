@page
@model Grocery.WebShop.UI.Pages.Shopping.DetailsModel
@{
}


<div id="top-container" class="text-center">
    <h2 class="font-weight-bold text-success">
        @Model.Product.Name
    </h2>
    <img id="big-food-icon" style="height:15rem" src="@Model.Product.ImageSrc">
    <p id="display-price" class="font-weight-bold text-left">$@String.Format("{0:0.00} / lb", @Model.Product.Price)</p>
</div>

<hr />

<div id="description-container">
    <p class="font-weight-bold text-info">@Model.Product.Description </p>
</div>

<hr />


<div id="pricing-container" class="d-flex font-weight-bold">
    <span id="unit-price" class="d-none">@Model.Product.Price</span>   

    <div class="col text-right">
        Total: $<span id="total-price">@(Model.Product.Price )</span>
    </div>
    <br />   
    <a asp-page="/Shopping/Cart" asp-route-id="@Model.Product.GroceryID" asp-page-handler="Add" class="btn btn-primary">Add to cart</a>
   


</div>

<hr />


<div id="back-button" class="text-center">
    <a asp-page="/Index" class="btn btn-success btn-lg">
        Back To home
    </a>
</div>

