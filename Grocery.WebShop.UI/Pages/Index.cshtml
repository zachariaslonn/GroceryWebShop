@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="text-success">
        Online Grocery Store
    </h1>
    <br />
    <h1 id="store-name"><img id="green-cart" class="mr-2" style="height:15rem" src="https://cdn-icons-png.flaticon.com/512/135/135763.png"></h1>
    <br />
</div>

<hr />

<div id="food-container">
    @foreach (var food in Model.Foods)
    {
        <div class="food-item pb-2 pt-2 row align-items-center">
            <div class="col-3 pl-1 pr-1 text-center" id="image-col">
                <img style="height:10rem" class="food-item-image" src=@food.ImageSrc alt=@food.Name>
            </div>
            <div class="col-6 pl-1 pr-1 font-weight-bold" id="info-col">
                <p class="food-item-info">@food.Name</p>
                <p class="food-item-info text-warning">$@String.Format("{0:0.00} / lb", food.Price)</p>
            </div>
            <div class="col-3 pl-1 pr-1 text-center" id="button-col">
                <a asp-page="/Shopping/Details" asp-route-id="@food.GroceryID" class="btn btn-success btn-lg">Details</a>
            </div>
        </div>
    }

</div>

<div>
    <a asp-page="/Shopping/Shoppingcart"></a>
</div>
